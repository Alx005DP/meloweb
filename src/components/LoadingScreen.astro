

<div id="loading-overlay" class="loading-overlay hidden">
    <div class="loading">
        <div class="i"></div>
        <div class="a"></div>
        <div class="u"></div>
    </div>
</div>

<style>
    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: var(--secondary);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        opacity: 1;
        transition: opacity 0.5s ease-out;
    }

    .loading-overlay.hidden {
        opacity: 0;
        pointer-events: none;
    }

    .loading {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .loading div {
        background-color: var(--hover);
        width: 20px;
        height: 20px;
        margin: 20px;
        border-radius: 50px;
        animation-name: load912355;
        animation-duration: 0.9s;
        animation-iteration-count: infinite;
        animation-direction: alternate;
    }

    .loading .a {
        animation-delay: 0.3s;
    }

    .loading .u {
        animation-delay: 0.6s;
    }

    @keyframes load912355 {
        0% {
            transform: translateY(50px) scale(1);
        }
        100% {
            transform: translateY(10px) scale(1.8) rotate(360deg);
        }
    }
</style>

<script>
    // Mostrar el loading screen
    function showLoading() {
        const overlay = document.getElementById('loading-overlay');
        if (overlay) {
            overlay.classList.remove('hidden');
        }
    }

    // Ocultar el loading screen
    function hideLoading() {
        const overlay = document.getElementById('loading-overlay');
        if (overlay) {
            overlay.classList.add('hidden');
        }
    }

    // Exposer funciones globalmente
    (window as any).showLoading = showLoading;
    (window as any).hideLoading = hideLoading;

    // Mostrar loading cuando empieza la navegación
    document.addEventListener('astro:before-preparation', () => {
        showLoading();
    });

    // Ocultar loading cuando la página se cargó
    document.addEventListener('astro:after-swap', () => {
        // Esperar un poco para que se vea la transición
        setTimeout(() => {
            hideLoading();
        }, 300);
    });

    // Al cargar la página inicial
    window.addEventListener('load', () => {
        setTimeout(() => {
            hideLoading();
        }, 500);
    });
</script>
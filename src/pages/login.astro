---
import Layout from "../layouts/Layouts.astro";
---

<Layout title="Acceder">
	<main
		style="top: 0px; height: 100vh; display: flex; justify-content: center;"
	>
		<form action="" id="login">
			<div class="contenedor">
				<h1>Acceder</h1>
				<hr />
				<label for="mail">Correo Electronico:</label>
				<input
					type="email"
					name="mail"
					id="mail"
					placeholder="example@domain.com"
				/>
				<label for="password">Contraseña:</label>
				<input
					type="password"
					name="password"
					id="password"
					placeholder="******"
				/>
				<input class="acpbutton" type="submit" value="Acceder" />
				<div class="setpswdre">
					<a href="#" class="lwsv">He olvidado la contraseña</a>
					<a href="../register" class="lwsv">No tengo cuenta, registrarme</a>
				</div>
			</div>
		</form>
	</main>
</Layout>

			</section>

			<script>
				const header = document.querySelector("header") as HTMLElement;
				const threshold = 20;

				function checkScroll() {
					if (window.scrollY > threshold) {
						header.classList.add("scrolled");
					} else {
						header.classList.remove("scrolled");
					}
				}

				checkScroll();

				window.addEventListener("scroll", checkScroll);
			</script>
			<script>
				document.addEventListener("DOMContentLoaded", () => {
					const menuCheckbox = document.getElementById("menumobile");
					const menuMobile = document.querySelector(".menumobile");
					const closeButton = document.querySelector(".cross button");
					const closeButton2 = document.querySelector(".cross");
					const menuLinks =
						document.querySelectorAll(".menumobile a");

					const toggleMenu = () => {
						menuMobile.classList.toggle("active");
						closeButton2.classList.toggle("activecross");
					};

					const closeMenu = () => {
						menuCheckbox.checked = false;
						menuMobile.classList.remove("active");
						closeButton2.classList.remove("activecross");
					};

					const closeMenuOnLinkClick = () => {
						closeMenu();
					};

					menuCheckbox.addEventListener("change", toggleMenu);
					closeButton.addEventListener("click", closeMenu);
					menuLinks.forEach((link) => {
						link.addEventListener("click", closeMenuOnLinkClick);
					});

					document.addEventListener("click", (e) => {
						const menuLabel =
							document.getElementById("menumobilelabel");
						if (
							!menuMobile.contains(e.target) &&
							!menuLabel.contains(e.target) &&
							!e.target.closest("#menumobile")
						) {
							closeMenu();
						}
					});
				});
			</script>
